@model LoginRegistration.Models.User
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Register</title>
</head>

<body>
    <div class="mx-auto w-50 d-flex justify-content-between align-items-center mb-5">
        <h1>Register to this Cool Site!</h1>
        <a href="/login">Login</a>
    </div>
    <form asp-action="RegisterNew" asp-controller="User" method="post"
        class="mx-auto w-50 d-flex justify-content-between">
        <div>
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" class="form-control mb-3" asp-for="FirstName">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input type="text" class="form-control mb-3" asp-for="LastName">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="text" class="form-control mb-3" asp-for="Email">
            <button class="btn btn-primary" type="submit">Sign Up Now</button>
        </div>
        <div>
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" class="form-control mb-3" asp-for="Password">
            <label asp-for="Confirm"></label>
            <span asp-validation-for="Confirm" class="text-danger"></span>
            <input type="password" class="form-control mb-3" asp-for="Confirm">
        </div>

    </form>
</body>

</html>