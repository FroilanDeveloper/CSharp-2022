@model LoginRegistration.Models.LoginUser
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Login!</title>
</head>

<body>
    <div class="mx-auto w-50 d-flex justify-content-between align-items-center mb-5">
        <h1>Login to this Cool Site!</h1>
        <a href="/">Register</a>
    </div>
    <form asp-action="LoginValid" asp-controller="User" method="post" class="mx-auto w-50">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email"></span>
        <input class="form-control w-50 mb-4" asp-for="Email" type="text">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
        <input class="form-control w-50 mb-4" asp-for="Password" type="password">
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</body>

</html>