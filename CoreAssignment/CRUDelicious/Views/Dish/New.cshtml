@model Dish

<div class="container w-75 mx-auto">
  <h2 class="text-center">Add a new Dish</h2>

  @* <form href="Dishes/create" method="POST"> *@
  <form class="shadow p-3 rounded" asp-controller="Dish" asp-action="Create" method="POST">
    
    <div class="mb-3">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
      <label asp-for="Chef"></label>
      <span asp-validation-for="Chef" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Chef">
    </div>

    <div class="mb-3">
      <label asp-for="Tastiness"></label>
      <select class="form-control" asp-for="Tastiness">
      <option disabled selected></option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      </select>
    </div>

    <div class="mb-3">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Calories">
    </div>

    <div>
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold">
      </span>
    </div>
    <div>
    <textarea asp-for="Description" id="" cols="30" rows="5"></textarea>
    </div>

    <button class="btn btn-success">Submit</button>
  </form>
</div>